model RentalListing {
  id             String         @id @default(auto()) @map("_id") @db.ObjectId
  title          String
  description    String
  address        String
  price          Int
  images         String[]
  location       GeoJson
  roomCount      RoomCount
  structuralType StructuralType
  leaser         Leaser
}

enum StructuralType {
  HOUSE
  BASEMENT
  APARTMENT
  CONDO
  ROOM
}

enum Leaser {
  OWNER
  ROOMMATE
}

type GeoJson {
  type        String  @default("Point")
  coordinates Float[]
}

type RoomCount {
  bedrooms  Int
  bathrooms Int
}

model User {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  username        String   @unique
  fullName        String
  password        String
  confirmPassword String
  role            String
  email           String   @unique
  phoneNumber     String
  birthday        String
  gender          String
  schoolProgram   String
  yearOfStudy     Int
}